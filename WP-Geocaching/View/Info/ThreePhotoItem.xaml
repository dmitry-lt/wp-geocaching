<UserControl x:Class="WP_Geocaching.View.Info.ThreePhotoItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">
    
    <Grid x:Name="LayoutRoot">
        <StackPanel Width="370" Margin="10,0,0,0">
            <Image Source="{Binding FirstPhoto.Source}" Height="{Binding Path=FirstPhoto.Height}" Width="{Binding Path=FirstPhoto.Width}"/>
            <Image Source="{Binding SecondPhoto.Source}" Height="{Binding SecondPhoto.Height}" Width="{Binding SecondPhoto.Width}"/>
            <Image Source="{Binding ThirdPhoto.Source}" Height="{Binding ThirdPhoto.Height}" Width="{Binding ThirdPhoto.Width}"/>
        </StackPanel>
    </Grid>
</UserControl>
